                    if (triggerRow) ids = [triggerRow];
                    const fieldNames = ids.reduce( (m,id) => [...m, ...(sectionAtts.map(field => makeRepeatingID(field,section,id) ))],[]);
                    getAttrs([...fieldNames,...fixedAtts], function (values) {
                        let settings = {};
