%link{rel: :stylesheet, type: :'text/css', href: 'dense35.css', media: 'screen'}
.charsheet
  .sheet-grid
    .sheet-page1
      -# HEADER
      .sheet-header
        .sheet-header-row1
          .sheet-label Name:
          .sheet-ui
            %input{type: 'text', name: 'attr_charname'}
          .sheet-label Race:
          .sheet-ui
            %input{type: 'text', name: 'attr_race'}
          .sheet-label Class:
          .sheet-ui
            %input{type: 'text', name: 'attr_class'}
          .sheet-label Religion:
          .sheet-ui
            %input{type: 'text', name: 'attr_religion'}
        .sheet-header-row2
          .sheet-label Ht:
          .sheet-ui
            %input{type: 'text', name: 'attr_height'}
          .sheet-label Wt:
          .sheet-ui
            %input{type: 'text', name: 'attr_weight'}
          .sheet-label Sex:
          .sheet-ui
            %input{type: 'text', name: 'attr_sex'}
          .sheet-label Age:
          .sheet-ui
            %input{type: 'text', name: 'attr_age'}
          .sheet-label Alignment:
          .sheet-ui
            %input{type: 'text', name: 'attr_alignment'}
          .sheet-label Level:
          .sheet-ui
            %input{type: 'text', name: 'attr_level'}
          .sheet-label XP:
          .sheet-ui
            %input{type: 'text', name: 'attr_xp'}
          .sheet-label Needed:
          .sheet-ui
            %input{type: 'text', name: 'attr_needed'}
          .sheet-label Speed:
          .sheet-ui
            %input{type: 'text', name: 'attr_speed'}
        .sheet-header-row3
          .sheet-label Region:
          .sheet-ui
            %input{type: 'text', name: 'attr_region'}
          .sheet-label Eyes:
          .sheet-ui
            %input{type: 'text', name: 'attr_eyes'}
          .sheet-label Hair:
          .sheet-ui
            %input{type: 'text', name: 'attr_hair'}
          .sheet-label Size:
          .sheet-ui
            %select{name: 'attr_characterSize'}
              %option{value: '1'} Fine
              %option{value: '2'} Diminutive
              %option{value: '3'} Tiny
              %option{value: '4'} Small
              %option{value: '5', selected: true} Medium
              %option{value: '6'} Large
              %option{value: '7'} Huge
              %option{value: '8'} Gargantuan
              %option{value: '9'} Colossal
          .sheet-label Appearance:
          .sheet-ui
            %input{type: 'text', name: 'attr_appearance'}

      -# ABILITY SCORES
      .sheet-ability-scores
        .sheet-ability-scores-top
          .blank
          .blank
          .sheet-label.sheet-ability-scores-header Base
          .sheet-label.sheet-ability-scores-header Mod
          .sheet-label.sheet-ability-scores-header Temp
          .sheet-label.sheet-ability-scores-header Mod
        .sheet-ability-scores-table
          - {str: 'Strength', dex: 'Dexterity', con: 'Constitution', int: 'Intelligence', wis: 'Wisdom', cha: 'Charisma'}.each do |k, v|
            .sheet-label= k.upcase
            .sheet-roll-button.sheet-hideleft
              %button{type: 'roll', value: "&{template:custom} {{title= @{Charname} - Ability Check}} {{Ability= #{v}}} {{Result=[[1d20 + @{#{k}TempMod}]] }} {{color=red}}", name: "roll_#{k}check"}
            .sheet-ui
              %input{type: 'text', name: "attr_#{k}"}
            .sheet-ui
              %input{type: 'text', name: "attr_#{k}Mod", readonly: true}
            .sheet-ui
              %input{type: 'text', name: "attr_#{k}Temp"}
            .sheet-ui
              %input{type: 'text', name: "attr_#{k}TempMod", readonly: true}

      -# SAVES & AC
      .sheet-saves-ac
        .sheet-saves-ac-sec1
          .sheet-label.sheet-saves-ac-upper-corner SAVE
          - %w(Total Base Stat Magic).each do |val|
            .sheet-label.sheet-table-subheader= val
          .sheet-label.sheet-table-subheader.sheet-saves-ac-misc-merge Misc
          - %w(FORT REF WILL).each do |val|
            .sheet-label= val
            .sheet-roll-button.sheet-hideleft
              %button{type: 'roll', value: "&{template:custom} {{color=green}} {{title= @{Charname} - Saving Throw}} {{Type= #{val.upcase} }} {{Result=[[1d20 + @{save#{val}Total}]] }}", name: "roll_#{val}savingthrow"}
            .sheet-ui
              %input{type: 'text', name: "attr_save#{val}Total"}
            .sheet-ui
              %input{type: 'text', name: "attr_save#{val}Base"}
            .sheet-ui
              %input{type: 'text', name: "attr_save#{val}Stat", readonly: true}
            .sheet-ui
              %input{type: 'text', name: "attr_save#{val}Magic"}
            .sheet-ui
              %input{type: 'text', name: "attr_save#{val}Misc"}
            .sheet-ui.sheet-hideleft.sheet-misc-explanation
              %input{type: 'text', name: "attr_save#{val}MiscExplanation", placeholder: '...', title: '-explanation-'}
        .sheet-saves-ac-sec2
          .sheet-label.sheet-table-subheader  Max HP:
          .sheet-ui.sheet-hideleft
            %input{type: 'text', name: "attr_maxHitPoints"}
          .sheet-label.sheet-table-subheader  Current HP:
          .sheet-ui.sheet-hideleft
            %input{type: 'text', name: "attr_currentHitPoints"}
          .sheet-label.sheet-table-subheader Initiative:
          .sheet-ui.sheet-hideleft
            %input{type: 'text', name: "attr_initiative"}
        .sheet-saves-ac-sec3
          .sheet-label.sheet-italics
          .sheet-label.sheet-italics.sheet-hideleft Total
          .sheet-label.sheet-italics.sheet-hideleft Base
          - %w(Armor Shield DEX Size Nat Dodge Deflect Misc).each do |val|
            .sheet-label.sheet-hideleft.sheet-italics=val
        .sheet-saves-ac-sec4
          .sheet-label AC
          .sheet-ui.sheet-hideleft
            %input{type: 'text', name: "attr_acTotal"}
          .sheet-label.sheet-hideleft.sheet-operator =
          .sheet-ui.sheet-hideleft
            %input{type: 'text', name: "attr_acBase", readonly: true, value: 10}
          .sheet-label.sheet-hideleft.sheet-operator +
          .sheet-ui.sheet-hideleft
            %input{type: 'text', name: "attr_acArmor"}
          .sheet-label.sheet-hideleft.sheet-operator +
          .sheet-ui.sheet-hideleft
            %input{type: 'text', name: "attr_acShield"}
          .sheet-label.sheet-hideleft.sheet-operator +
          .sheet-ui.sheet-hideleft
            %input{type: 'text', name: "attr_acDex", readonly: true}
          .sheet-label.sheet-hideleft.sheet-operator +
          .sheet-ui.sheet-hideleft
            %input{type: 'text', name: "attr_acSize", readonly: true}
          .sheet-label.sheet-hideleft.sheet-operator +
          .sheet-ui.sheet-hideleft
            %input{type: 'text', name: "attr_acNat"}
          .sheet-label.sheet-hideleft.sheet-operator +
          .sheet-ui.sheet-hideleft
            %input{type: 'text', name: "attr_acDodge"}
          .sheet-label.sheet-hideleft.sheet-operator +
          .sheet-ui.sheet-hideleft
            %input{type: 'text', name: "attr_acDeflect"}
          .sheet-label.sheet-hideleft.sheet-operator +
          .sheet-ui.sheet-hideleft
            %input{type: 'text', name: "attr_acMisc"}
          .sheet-ui.sheet-hideleft.sheet-misc-explanation
            %input{type: 'text', name: "attr_acMiscExplain", placeholder: '...', title: '-explanation-'}

      -# ATTACK BONUSES
      .sheet-attack-bonus
        .sheet-attack-bonus-sec1
          .sheet-label BASE ATTACK BONUS:
          .sheet-ui.sheet-hideleft
            %input{type: 'text', name: "attr_baseAttackBonus"}
        .sheet-attack-bonus-sec2
          .sheet-label
          .sheet-label.sheet-hideleft.sheet-italics Total
          .sheet-label.sheet-hideleft.sheet-italics
          .sheet-label.sheet-hideleft.sheet-italics Base
          .sheet-label.sheet-hideleft.sheet-italics
          .sheet-label.sheet-hideleft.sheet-italics Stat
          .sheet-label.sheet-hideleft.sheet-italics
          .sheet-label.sheet-hideleft.sheet-italics Size
          .sheet-label.sheet-hideleft.sheet-italics
          .sheet-label.sheet-hideleft.sheet-italics Misc
          .sheet-label.sheet-hideleft
          .sheet-label.sheet-attack-melee &#9876;Melee:
          .sheet-ui.sheet-hideleft
            %input{type: 'text', name: "attr_meleeTotal", readonly: true}
          .sheet-label.sheet-hideleft.sheet-operator =
          .sheet-ui.sheet-hideleft
            %input{type: 'text', name: "attr_meleeBase", readonly: true}
          .sheet-label.sheet-hideleft.sheet-operator +
          .sheet-ui.sheet-hideleft
            %input{type: 'text', name: "attr_meleeStatBonus", placeholder: 'STR', readonly: true}
          .sheet-label.sheet-hideleft.sheet-operator +
          .sheet-ui.sheet-hideleft
            %input{type: 'text', name: "attr_meleeSize", readonly: true}
          .sheet-label.sheet-hideleft.sheet-operator +
          .sheet-ui.sheet-hideleft
            %input{type: 'text', name: "attr_meleeMisc"}
          .sheet-ui.sheet-hideleft.sheet-misc-explanation
            %input{type: 'text', name: "attr_meleeExplanation", placeholder: '...', title: '-explanation-'}
          .sheet-label.sheet-attack-range &#9732;Range:
          .sheet-ui.sheet-hideleft
            %input{type: 'text', name: "attr_rangeTotal", readonly: true}
          .sheet-label.sheet-hideleft.sheet-operator =
          .sheet-ui.sheet-hideleft
            %input{type: 'text', name: "attr_rangeBase", readonly: true}
          .sheet-label.sheet-hideleft.sheet-operator +
          .sheet-ui.sheet-hideleft
            %input{type: 'text', name: "attr_rangeStatBonus", placeholder: 'DEX', readonly: true}
          .sheet-label.sheet-hideleft.sheet-operator +
          .sheet-ui.sheet-hideleft
            %input{type: 'text', name: "attr_rangeSize", readonly: true}
          .sheet-label.sheet-hideleft.sheet-operator +
          .sheet-ui.sheet-hideleft
            %input{type: 'text', name: "attr_rangeMisc"}
          .sheet-ui.sheet-hideleft.sheet-misc-explanation
            %input{type: 'text', name: "attr_rangeExplanation", placeholder: '...', title: '-explanation-'}
          .sheet-label.sheet-attack-grapple Grapple:
          .sheet-ui.sheet-hideleft
            %input{type: 'text', name: "attr_grappleTotal", readonly: true}
          .sheet-label.sheet-hideleft.sheet-operator =
          .sheet-ui.sheet-hideleft
            %input{type: 'text', name: "attr_grappleBase", readonly: true}
          .sheet-label.sheet-hideleft.sheet-operator +
          .sheet-ui.sheet-hideleft
            %input{type: 'text', name: "attr_grappleStatBonus", placeholder: 'STR', readonly: true}
          .sheet-label.sheet-hideleft.sheet-operator +
          .sheet-ui.sheet-hideleft
            %input{type: 'text', name: "attr_grappleSize", readonly: true}
          .sheet-label.sheet-hideleft.sheet-operator +
          .sheet-ui.sheet-hideleft
            %input{type: 'text', name: "attr_grappleMisc"}
          .sheet-ui.sheet-hideleft.sheet-misc-explanation
            %input{type: 'text', name: "attr_grappleExplanation", placeholder: '...', title: '-explanation-'}
        .sheet-attack-bonus-sec3
          .sheet-label Touch AC:
          .sheet-ui.sheet-hideleft
            %input{type: 'text', name: "attr_touchAC", placeholder: 'No Armor/Shield/Nat', readonly: true}
          .sheet-label Flat Footed AC:
          .sheet-ui.sheet-hideleft
            %input{type: 'text', name: "attr_flatFootedAC", placeholder: 'No Dex/Dodge', readonly: true}

      -# WEAPONS
      .sheet-weapons
        .sheet-label.sheet-table-header.sheet-weapons-header
          .sheet-label.sheet-table-header.sheet-weaponname-header Weapon/Attack
          .sheet-label.sheet-table-header.sheet-roll-weapon-header
          .sheet-label.sheet-table-header.sheet-tohit-header ToHit
          .sheet-label.sheet-table-header.sheet-tohitmod-header Hit+
          .sheet-label.sheet-table-header.sheet-damage-header Dmg
          .sheet-label.sheet-table-header.sheet-damagemod-header Dmg+
          .sheet-label.sheet-table-header.sheet-crit-header Crit
          .sheet-label.sheet-table-header.sheet-mult-header Mult
          .sheet-label.sheet-table-header.sheet-range-header Rnge
          .sheet-label.sheet-table-header.sheet-wpnsize-header Size
          .sheet-label.sheet-table-header.sheet-wpnspecial-header
        %fieldset.repeating_weapons
          .sheet-weapons-section
            .sheet-ui{class: "sheet-weaponName"}
              %input{type: 'text', name: "attr_weaponName", placeholder: 'eg: Light XBow point blank'}
            .sheet-roll-button
              %button{type: 'roll', value: "&{template:custom} [[ [[1d20cs>@{weaponCrit}]] + [[0@{weaponToHit}]] + [[0@{weaponToHitMod}]] ]] [[[[0@{weaponDamage}]] + [[0@{weaponDamageMod}]]]] {{title= @{Charname} Attacks}} {{Weapon= @{weaponName} }} {{To Hit=$[[0]] + $[[1]] + $[[2]] = $[[3]] }} {{Damage=$[[4]] + $[[5]] = $[[6]]}}", name: "rollweapon"}
            .sheet-ui{class: "sheet-weaponToHit"}
              %input{type: 'text', name: "attr_weaponToHit", placeholder: '3'}
            .sheet-ui{class: "sheet-weaponToHitMod"}
              %input{type: 'text', name: "attr_weaponToHitMod", placeholder: '0'}
            .sheet-ui{class: "sheet-weaponDamage"}
              %input{type: 'text', name: "attr_weaponDamage", placeholder: '1d8'}
            .sheet-ui{class: "sheet-weaponDamageMod"}
              %input{type: 'text', name: "attr_weaponDamageMod", placeholder: '0'}
            .sheet-ui{class: "sheet-weaponCrit"}
              %input{type: 'text', name: "attr_weaponCrit", placeholder: '19'}
            .sheet-ui{class: "sheet-weaponMult"}
              %input{type: 'text', name: "attr_weaponMult", placeholder: '2'}
            .sheet-ui{class: "sheet-weaponRange"}
              %input{type: 'text', name: "attr_weaponRange", placeholder: '80ft'}
            .sheet-ui{class: "sheet-weaponSize"}
              %input{type: 'text', name: "attr_weaponSize", placeholder: 'm'}
            .sheet-ui{class: "sheet-weaponSpecial"}
              %input{type: 'text', name: "attr_weaponSpecial", placeholder: '...'}

      -# ARMOR
      .sheet-armor
        .sheet-label.sheet-table-header.sheet-armor-header
          .sheet-label.sheet-table-header.sheet-armorname-header Armor/Shield/Item
          .sheet-label.sheet-table-header.sheet-bonus-header Bonus
          .sheet-label.sheet-table-header.sheet-maxdex-header Max Dex
          .sheet-label.sheet-table-header.sheet-penalty-header &#10004;Penalty
          .sheet-label.sheet-table-header.sheet-spell-header Spell&#9785;
          .sheet-label.sheet-table-header.sheet-armorspecial-header
        %fieldset.repeating_armor
          .sheet-armor-section
            .sheet-ui{class: "sheet-armorName"}
              %input{type: 'text', name: "attr_armorName", placeholder: 'eg: leather armor +1'}
            .sheet-ui{class: "sheet-armorBonus"}
              %input{type: 'text', name: "attr_armorBonus", placeholder: '3'}
            .sheet-ui{class: "sheet-armorMaxDex"}
              %input{type: 'text', name: "attr_armorMaxDex", placeholder: '6'}
            .sheet-ui{class: "sheet-armorPenalty"}
              %input{type: 'text', name: "attr_armorPenalty", placeholder: '0'}
            .sheet-ui{class: "sheet-armorSpellFail"}
              %input{type: 'text', name: "attr_armorSpellFail", placeholder: '10%'}
            .sheet-ui{class: "sheet-armorSpecial"}
              %input{type: 'text', name: "attr_armorSpecial", placeholder: '...'}

      -# TRAITS & ABILITIES
      .sheet-traits-abilities
        .sheet-label.sheet-table-header.sheet-racial-traits-header Racial Traits
        - (1..8).each do |i|
          .sheet-ui{class: "sheet-racial-traits#{i}"}
            %input{type: 'text', name: "attr_racialTraits#{i}"}
        .sheet-label.sheet-table-header.sheet-languages-header Languages
        - (1..8).each do |i|
          .sheet-ui{class: "sheet-languages#{i}"}
            %input{type: 'text', name: "attr_languages#{i}"}
        .sheet-label.sheet-table-header.sheet-class-abilities-header Class Abilities
        - (1..17).each do |i|
          .sheet-ui{class: "sheet-class-abilities#{i}"}
            %input{type: 'text', name: "attr_classAbilities#{i}"}
        .sheet-label.sheet-table-header.sheet-feats-header Feats
        - (1..17).each do |i|
          .sheet-ui{class: "sheet-feats#{i}"}
            %input{type: 'text', name: "attr_feats#{i}"}

      -# EQUIPMENT
      .sheet-equipment
        .sheet-label.sheet-table-header.sheet-equipment-header EQUIPMENT
        .sheet-label.sheet-table-subheader.sheet-equipment-subheader1 In Backpack
        .sheet-label.sheet-table-subheader.sheet-equipment-subheader2 Wt
        .sheet-label.sheet-table-subheader.sheet-equipment-subheader3 Worn
        .sheet-label.sheet-table-subheader.sheet-equipment-subheader4 Wt
        .sheet-label.sheet-table-subheader.sheet-equipment-subheader5 Magical Items
        .sheet-label.sheet-table-subheader.sheet-equipment-subheader6 Wt
        - (1..28).each do |i|
          .sheet-ui{class: "sheet-backpack#{i}"}
            %input{type: 'text', name: "attr_backpack#{i}"}
        - (1..28).each do |i|
          .sheet-ui{class: "sheet-backpack-wt#{i}"}
            %input{type: 'text', name: "attr_backpackWt#{i}"}
        - (1..28).each do |i|
          .sheet-ui{class: "sheet-worn#{i}"}
            %input{type: 'text', name: "attr_worn#{i}"}
        - (1..28).each do |i|
          .sheet-ui{class: "sheet-worn-wt#{i}"}
            %input{type: 'text', name: "attr_wornWt#{i}"}
        - item_slots = %w(head face throat shldrs torso body arms hands ring1 ring2 waist feet)
        - item_slots.each do |val|
          .sheet-label-magic-item= val[0].upcase + val[1..-1] + ':'
        - ((item_slots.count + 1)..28).each do |i|
          .sheet-label-magic-item
            %input{type: 'text', name: "attr_magicItemSlot#{i}", placeholder: " ...", title: '-custom slot-'}
        - (1..28).each do |i|
          .sheet-ui.sheet-magic-item-description{class: "sheet-magic-item#{i}"}
            %input{type: 'text', name: "attr_magicItem#{i}"}
        - (1..28).each do |i|
          .sheet-ui{class: "sheet-magic-item-wt#{i}"}
            %input{type: 'text', name: "attr_magicItemWt#{i}"}

      -# WEIGHT / LOADING
      .sheet-carry-weight
        .sheet-label-small Total Weight:
        .sheet-ui{class: "sheet-total-weight sheet-hideleft"}
          %input{type: 'text', name: "attr_totalWeight", readonly: true}
        .sheet-label-small.sheet-hideleft Light (1/3):
        .sheet-ui{class: "sheet-weight-light sheet-hideleft"}
          %input{type: 'text', name: "attr_weightLight", readonly: true}
        .sheet-label-small.sheet-hideleft Medium (2/3):
        .sheet-ui{class: "sheet-weight-medium sheet-hideleft"}
          %input{type: 'text', name: "attr_weightMedium", readonly: true}
        .sheet-label-small.sheet-hideleft Heavy:
        .sheet-ui{class: "sheet-weight-heavy sheet-hideleft"}
          %input{type: 'text', name: "attr_weightHeavy", readonly: true}
        .sheet-label-small.sheet-hideleft Lift (2x):
        .sheet-ui{class: "sheet-weight-lift sheet-hideleft"}
          %input{type: 'text', name: "attr_weightLift", readonly: true}
        .sheet-label-small.sheet-hideleft Drag (5x):
        .sheet-ui{class: "sheet-weight-drag sheet-hideleft"}
          %input{type: 'text', name: "attr_weightDrag", readonly: true}

      -# SKILLS
      -skills1 = { 'Appraise' => [0, 'INT'], 'Autohypnosis' => [1, 'WIS'], 'Balance' => [0, 'DEX'], 'Bluff' => [0, 'CHA'], 'Climb' => [0, 'STR'], 'Concentration' => [0, 'CON'], 'CraftFillIn1' => [0, 'INT'], 'CraftFillIn2' => [0, 'INT'], 'CraftFillIn3' => [0, 'INT'], 'Decipher Script' => [1, 'INT'], 'Diplomacy' => [0, 'CHA'], 'Disable Device' => [1, 'INT'], 'Disguise' => [0, 'CHA'], 'Escape Artist' => [0, 'DEX'], 'Forgery' => [0, 'INT'], 'Gather Info' => [0, 'CHA'], 'Handle Animal' => [1, 'CHA'], 'Heal' => [0, 'WIS'], 'Hide' => [0, 'DEX'], 'Intimidate' => [0, 'CHA'], 'Jump' => [0, 'STR'],
        }
      -skills2 = { 'KnowledgeFillIn1' => [1, 'INT'], 'KnowledgeFillIn2' => [1, 'INT'], 'KnowledgeFillIn3' => [1, 'INT'], 'KnowledgeFillIn4' => [1, 'INT'], 'KnowledgeFillIn5' => [1, 'INT'], 'KnowledgeFillIn6' => [1, 'INT'], 'KnowledgeFillIn7' => [1, 'INT'], 'Listen' => [0, 'WIS'], 'Move Silently' => [0, 'DEX'], 'Open Lock' => [1, 'DEX'], 'PerformFillIn1' => [0, 'CHA'], 'PerformFillIn2' => [0, 'CHA'], 'PerformFillIn3' => [0, 'CHA'], 'ProfessionFillIn1' => [1, 'WIS'], 'ProfessionFillIn2' => [1, 'WIS'], 'PsiCraft' => [1, 'INT'], 'Ride' => [0, 'DEX'], 'Search' => [0, 'INT'], 'Sense Motive' => [0, 'WIS'], 'Sleight Of Hand' => [1, 'DEX'], 'Speak Language' => [1, 'INT'] }
      -skills3 = { 'SpellCraft' => [1, 'INT'], 'Spot' => [0, 'WIS'], 'Survival' => [0, 'WIS'], 'Swim' => [0, 'STR'], 'Tumble' => [1, 'DEX'], 'Use Magic Device' => [1, 'CHA'], 'Use Psionic Device' => [1, 'CHA'], 'Use Rope' => [0, 'DEX'], }
      .sheet-skills.sheet-skills-1
        .sheet-label.sheet-table-header.sheet-skills-header SKILLS
        .sheet-label-small.sheet-skills-explain Mod = Stat + Ranks + Misc
        - skills1.each do |k, v|
          - safename = k.downcase.tr(' ', '')
          - if k =~ /FillIn\d+/
            .sheet-roll-button
              %button{type: 'roll', value: "&{template:custom} {{title= @{Charname} - Skill Check}} {{skill=#{k.gsub(/FillIn\d+/, '')}: @{#{safename}SplitSkillExplanation} }} {{Result=[[1d20 + @{#{safename}Total}]] }}", name: "roll_#{safename}_skill_check"}
            .sheet-label.sheet-label-skills.sheet-hideleft.sheet-split-skill{title: (v[0].zero? ? 'Can use Untrained' : '')}= k.gsub(/FillIn\d+/, '') + (v[0].zero? ? '&#10041;' : '')
            .sheet-ui.sheet-split-skill-explanation.sheet-hideleft
              %input{type: 'text', name: "attr_#{safename}SplitSkillExplanation", placeholder: '...', title: '-area of expertise-'}
          - else
            .sheet-roll-button
              %button{type: 'roll', value: "&{template:custom} {{title= @{Charname} - Skill Check}} {{skill=#{k}}} {{Result=[[1d20 + @{#{safename}Total}]] }}", name: "roll_#{safename}_skill_check"}
            .sheet-label.sheet-label-skills.sheet-hideleft.sheet-merged-skill{title: (v[0].zero? ? 'Can use Untrained' : '')}= k.gsub(/FillIn\d+/, '') + (v[0].zero? ? '&#10041;' : '')
          .sheet-ui.sheet-skill-total
            %input{type: 'text', name: "attr_#{safename}Total", readonly: true}
          .sheet-label.sheet-hideleft.sheet-operator =
          .sheet-ui.sheet-skill-statmod.sheet-hideleft
            %input{type: 'text', name: "attr_#{safename}Statmod", placeholder: v[1], readonly: true}
          .sheet-label.sheet-hideleft.sheet-operator +
          .sheet-ui.sheet-skill-ranks.sheet-hideleft
            %input{type: 'text', name: "attr_#{safename}Ranks"}
          .sheet-label.sheet-hideleft.sheet-operator +
          .sheet-ui.sheet-skill-miscmod.sheet-hideleft
            %input{type: 'text', name: "attr_#{safename}Miscmod"}
