        ======================================================*/

    const multistats = {};

    // Attribute bonus summing
    ['str', 'con', 'dex', 'int', 'wis', 'cha'].forEach(x => {
      multistats[`${x}mod`] = {rule: 'dnd_stat_bonus', attributes: [x]};
