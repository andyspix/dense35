%link{rel: :stylesheet, type: :'text/css', href: 'dense35.css', media: 'screen'}
.charsheet
  .sheet-grid
    -# HEADER
    .sheet-header
      .sheet-header-row1
        .sheet-label.sheet-charname Name:
        .sheet-ui.sheet-charname
          %input{type: 'text', name: 'attr_charname'}
        .sheet-label.sheet-race Race:
        .sheet-ui.sheet-race
          %input{type: 'text', name: 'attr_race'}
        .sheet-label.sheet-class Class:
        .sheet-ui.sheet-class
          %input{type: 'text', name: 'attr_class'}
        .sheet-label.sheet-religion Religion:
        .sheet-ui.sheet-religion
          %input{type: 'text', name: 'attr_religion'}
      .sheet-header-row2
        .sheet-label.sheet-height Ht:
        .sheet-ui.sheet-height
          %input{type: 'text', name: 'attr_height'}
        .sheet-label.sheet-weight Wt:
        .sheet-ui.sheet-weight
          %input{type: 'text', name: 'attr_weight'}
        .sheet-label.sheet-sex Sex:
        .sheet-ui.sheet-sex
          %input{type: 'text', name: 'attr_sex'}
        .sheet-label.sheet-age Age:
        .sheet-ui.sheet-age
          %input{type: 'text', name: 'attr_age'}
        .sheet-label.sheet-alignment Alignment:
        .sheet-ui.sheet-alignment
          %input{type: 'text', name: 'attr_alignment'}
        .sheet-label.sheet-level Level:
        .sheet-ui.sheet-level
          %input{type: 'text', name: 'attr_level'}
        .sheet-label.sheet-xp XP:
        .sheet-ui.sheet-xp
          %input{type: 'text', name: 'attr_xp'}
        .sheet-label.sheet-needed Needed:
        .sheet-ui.sheet-needed
          %input{type: 'text', name: 'attr_needed'}
        .sheet-label.sheet-speed Speed:
        .sheet-ui.sheet-speed
          %input{type: 'text', name: 'attr_speed'}
      .sheet-header-row3
        .sheet-label.sheet-region Region:
        .sheet-ui.sheet-region
          %input{type: 'text', name: 'attr_region'}
        .sheet-label.sheet-eyes Eyes:
        .sheet-ui.sheet-eyes
          %input{type: 'text', name: 'attr_eyes'}
        .sheet-label.sheet-hair Hair:
        .sheet-ui.sheet-hair
          %input{type: 'text', name: 'attr_hear'}
        .sheet-label.sheet-appearance Appearance:
        .sheet-ui.sheet-appearance
          %input{type: 'text', name: 'attr_appearance'}

    -# ABILITY SCORES
    .sheet-ability-scores
      .sheet-ability-scores-top
        .blank
        .sheet-label.sheet-ability-scores-header Score
        .sheet-label.sheet-ability-scores-header Mod
        .sheet-label.sheet-ability-scores-header Temp
        .sheet-label.sheet-ability-scores-header Mod
      .sheet-ability-scores-table
        - %w(str dex con int dex wis).each do |val|
          .sheet-label= val.upcase
          .sheet-ui
            %input{type: 'text', name: "attr_#{val}_score"}
          .sheet-ui
            %input{type: 'text', name: "attr_#{val}_mod"}
          .sheet-ui
            %input{type: 'text', name: "attr_#{val}_temp"}
          .sheet-ui
            %input{type: 'text', name: "attr_#{val}_tempmod"}

    -# SAVES & AC
    .sheet-saves-ac
      .item A
      .item A
      .item A

    -# ATTACK BONUSES
    .sheet-attack-bonus
      .item A
      .item A
      .item A

    -# WEAPONS
    .sheet-weapons
      .sheet-label.sheet-table-header.sheet-weapons-header Weapons
      .sheet-label.sheet-table-header.sheet-tohit-header To Hit
      .sheet-label.sheet-table-header.sheet-damage-header Damage
      .sheet-label.sheet-table-header.sheet-crit-header Critical
      .sheet-label.sheet-table-header.sheet-range-header Range
      .sheet-label.sheet-table-header.sheet-wpnsize-header Size
      .sheet-label.sheet-table-header.sheet-wpnwt-header Wt
      .sheet-label.sheet-table-header.sheet-wpnspecial-header Special Abilities
      - (1..7).each do |i|
        - %w(weapons tohit damage crit range wpnsize wpnwt wpnspecial).each do |val|
          .sheet-ui{class: "sheet-#{val}#{i}"}
            %input{type: 'text', name: "attr_#{val}#{i}"}

    -# ARMOR
    .sheet-armor
      .sheet-label.sheet-table-header.sheet-armor-header Armor/Shield/Item
      .sheet-label.sheet-table-header.sheet-bonus-header Bonus
      .sheet-label.sheet-table-header.sheet-maxdex-header Max Dex
      .sheet-label.sheet-table-header.sheet-penalty-header &#10004;Penalty
      .sheet-label.sheet-table-header.sheet-spell-header Spell&#9785;
      .sheet-label.sheet-table-header.sheet-armorwt-header Wt
      .sheet-label.sheet-table-header.sheet-armorspecial-header Special Abilities
      - (1..5).each do |i|
        - %w(armor bonus maxdex penalty spell armorwt armorspecial).each do |val|
          .sheet-ui{class: "sheet-#{val}#{i}"}
            %input{type: 'text', name: "attr_#{val}#{i}"}

    -# TRAITS & ABILITIES
    .sheet-traits-abilities
      .sheet-label.sheet-table-header.sheet-racial-traits-header Racial Traits
      - (1..8).each do |i|
        .sheet-ui{class: "sheet-racial-traits#{i}"}
          %input{type: 'text', name: "attr_racial-traits#{i}"}
      .sheet-label.sheet-table-header.sheet-languages-header Languages
      - (1..8).each do |i|
        .sheet-ui{class: "sheet-languages#{i}"}
          %input{type: 'text', name: "attr_languages#{i}"}
      .sheet-label.sheet-table-header.sheet-class-abilities-header Class Abilities
      - (1..17).each do |i|
        .sheet-ui{class: "sheet-class-abilities#{i}"}
          %input{type: 'text', name: "attr_class-abilities#{i}"}
      .sheet-label.sheet-table-header.sheet-feats-header Feats
      - (1..17).each do |i|
        .sheet-ui{class: "sheet-feats#{i}"}
          %input{type: 'text', name: "attr_feats#{i}"}

    -# EQUIPMENT
    .sheet-equipment
      .sheet-label.sheet-table-header.sheet-equipment-header EQUIPMENT
      .sheet-label.sheet-table-subheader.sheet-equipment-subheader1 In Backpack
      .sheet-label.sheet-table-subheader.sheet-equipment-subheader2 Wt
      .sheet-label.sheet-table-subheader.sheet-equipment-subheader3 Worn
      .sheet-label.sheet-table-subheader.sheet-equipment-subheader4 Wt
      .sheet-label.sheet-table-subheader.sheet-equipment-subheader5 Magical Items
      .sheet-label.sheet-table-subheader.sheet-equipment-subheader6 Wt
      - (1..28).each do |i|
        .sheet-ui{class: "sheet-backpack#{i}"}
          %input{type: 'text', name: "attr_backpack#{i}"}
      - (1..28).each do |i|
        .sheet-ui{class: "sheet-backpack-wt#{i}"}
          %input{type: 'text', name: "attr_backpack-wt#{i}"}
      - (1..28).each do |i|
        .sheet-ui{class: "sheet-worn#{i}"}
          %input{type: 'text', name: "attr_worn#{i}"}
      - (1..28).each do |i|
        .sheet-ui{class: "sheet-worn-wt#{i}"}
          %input{type: 'text', name: "attr_worn-wt#{i}"}
      - item_slots = %w(head face throat shldrs torso body arms hands ring1 ring2 waist feet)
      - item_slots.each do |val|
        .sheet-label-magic-item= val[0].upcase + val[1..-1] + ':'
      - ((item_slots.count + 1)..28).each do |i|
        .sheet-label-magic-item
          %input{type: 'text', name: "attr_magic-item#{i}", placeholder: " ---"}
      - (1..28).each do |i|
        .sheet-ui.sheet-magic-item-description{class: "sheet-magic-item#{i}"}
          %input{type: 'text', name: "attr_magic-item#{i}"}
      - (1..28).each do |i|
        .sheet-ui{class: "sheet-magic-item-wt#{i}"}
          %input{type: 'text', name: "attr_magic-item-wt#{i}"}

    -# WEIGHT / LOADING
    .sheet-carry-weight
      .sheet-label-small Total Weight:
      .sheet-ui{class: "sheet-total-weight sheet-hideleft"}
        %input{type: 'text', name: "attr_total_weight"}
      .sheet-label-small.sheet-hideleft Light (1/3):
      .sheet-ui{class: "sheet-weight-light sheet-hideleft"}
        %input{type: 'text', name: "attr_weight-light"}
      .sheet-label-small.sheet-hideleft Medium (2/3):
      .sheet-ui{class: "sheet-weight-medium sheet-hideleft"}
        %input{type: 'text', name: "attr_weight-medium"}
      .sheet-label-small.sheet-hideleft Heavy:
      .sheet-ui{class: "sheet-weight-heavy sheet-hideleft"}
        %input{type: 'text', name: "attr_weight-heavy"}
      .sheet-label-small.sheet-hideleft Lift (2x):
      .sheet-ui{class: "sheet-weight-lift sheet-hideleft"}
        %input{type: 'text', name: "attr_weight-lift"}
      .sheet-label-small.sheet-hideleft Drag (5x):
      .sheet-ui{class: "sheet-weight-drag sheet-hideleft"}
        %input{type: 'text', name: "attr_weight-drag"}

    -# SKILLS
    .sheet-skills
      .sheet-label.sheet-table-header.sheet-skills-header SKILLS
      .sheet-label-small.sheet-skills-explain Mod + Stat + Ranks + Misc
      -skills = { 'Appraise' => [0, 'INT'], 'Balance' => [0, 'DEX'], 'Bluff' => [0, 'CHA'], 'Climb' => [0, 'STR'], 'Concentration' => [0, 'CON'], 'Craft-Alchemy' => [0, 'INT'], 'Craft-Poison' => [0, 'INT'], 'Craft-misc1' => [0, 'INT'], 'Craft-misc2' => [0, 'INT'], 'Craft-misc3' => [0, 'INT'], 'Decipher Script' => [1, 'INT'], 'Diplomacy' => [0, 'CHA'], 'Disable Device' => [1, 'INT'], 'Disguise' => [0, 'CHA'], 'Escape Artist' => [0, 'DEX'], 'Forgery' => [0, 'INT'], 'Gather Information' => [0, 'CHA'], 'Handle Animal' => [1, 'CHA'], 'Heal' => [0, 'WIS'], 'Hide' => [0, 'DEX'], 'Intimidate' => [0, 'CHA'], 'Jump' => [0, 'STR'], 'Knowledge-Arcana' => [1, 'INT'], 'Knowledge-Nature' => [1, 'INT'], 'Knowledge-Religion' => [1, 'INT'], 'Knowledge-misc1' => [1, 'INT'], 'Knowledge-misc2' => [1, 'INT'], 'Knowledge-misc3' => [1, 'INT'], 'Listen' => [0, 'WIS'], 'Move Silently' => [0, 'DEX'], 'Open Lock' => [1, 'DEX'], 'Perform-misc1' => [0, 'CHA'], 'Perform-misc2' => [0, 'CHA'], 'Perform-misc3' => [0, 'CHA'], 'Profession-misc1' => [1, 'WIS'], 'Profession-misc2' => [1, 'WIS'], 'PsiCraft' => [1, 'INT'], 'Ride' => [0, 'DEX'], 'Search' => [0, 'INT'], 'Sense Motive' => [0, 'WIS'], 'Sleight Of Hand' => [1, 'DEX'], 'Speak Language' => [1, 'INT'], 'SpellCraft' => [1, 'INT'], 'Spot' => [0, 'WIS'], 'Survival' => [0, 'WIS'], 'Swim' => [0, 'STR'], 'Tumble' => [1, 'DEX'], 'Use Magic Device' => [1, 'CHA'], 'Use Psionic Device' => [1, 'CHA'], 'Use Rope' => [0, 'DEX'], }
      - skills.each do |k, v|
        .sheet-label.sheet-label-skills= k.gsub(/_misc\d+/, '') + (v[0].zero? ? ' &#10041;' : '')
        .sheet-ui{class: "sheet-#{k.downcase.tr(' ', '-')}-total"}
          %input{type: 'text', name: "attr_#{k.downcase.tr(' ', '-')}-total"}
        .sheet-label.sheet-hideleft =
        .sheet-ui.sheet-label{class: "sheet-#{k.downcase.tr(' ', '-')}-statmod sheet-hideleft"}
          %input{type: 'text', name: "attr_#{k.downcase.tr(' ', '-')}-statmod sheet-hideleft", placeholder: v[1]}
        .sheet-label.sheet-hideleft +
        .sheet-ui{class: "sheet-#{k.downcase.tr(' ', '-')}-ranks sheet-hideleft"}
          %input{type: 'text', name: "attr_#{k.downcase.tr(' ', '-')}-ranks"}
        .sheet-label.sheet-hideleft +
        .sheet-ui{class: "sheet-#{k.downcase.tr(' ', '-')}-miscmod sheet-hideleft"}
          %input{type: 'text', name: "attr_#{k.downcase.tr(' ', '-')}-miscmod sheet-hideleft"}
        .sheet-ui{class: "sheet-#{k.downcase.tr(' ', '-')}-misc sheet-hideleft"}
          %input{type: 'text', name: "attr_#{k.downcase.tr(' ', '-')}-misc"}
      - 3.times do |i|
        .sheet-ui{class: "sheet-skill-misc#{i}"}
          %input{type: 'text', name: "attr_skill-misc#{i}_name"}
        .sheet-ui{class: "sheet-skill-misc#{i}-total"}
          %input{type: 'text', name: "attr_skill-misc#{i}-total"}
        .sheet-label.sheet-hideleft =
        .sheet-ui.sheet-label{class: "sheet-skill-misc#{i}-statmod sheet-hideleft"}
          %input{type: 'text', name: "attr_skill-misc#{i}-statmod sheet-hideleft"}
        .sheet-label.sheet-hideleft +
        .sheet-ui{class: "sheet-skill-misc#{i}-ranks sheet-hideleft"}
          %input{type: 'text', name: "attr_skill-misc#{i}-ranks"}
        .sheet-label.sheet-hideleft +
        .sheet-ui{class: "sheet-skill-misc#{i}-miscmod sheet-hideleft"}
          %input{type: 'text', name: "attr_skill-misc#{i}-miscmod sheet-hideleft"}
        .sheet-ui{class: "sheet-skill-misc#{i}-misc sheet-hideleft"}
          %input{type: 'text', name: "attr_skill-misc#{i}-misc"}
      - 12.times do |i|
        .sheet-ui.skill-miscline
          %input{type: 'text', name: "attr_miscline#{i}"}
