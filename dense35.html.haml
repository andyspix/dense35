    });

    // BAB filler
    ['meleeBase', 'rangeBase', 'grappleBase'].forEach(x => {
      multistats[`${x}`] = {rule: 'fill', attributes: ['baseAttackBonus']};
    });

    // Weight Summing
    const backpack            = _.map([...Array(29).keys()], function(n) {return 'backpackWt' + n})
    const worn                = _.map([...Array(29).keys()], function(n) {return 'wornWt' + n})
    const magic               = _.map([...Array(29).keys()], function(n) {return 'magicItemWt' + n})
    const gearwt              = _.union(backpack, worn, magic)
    multistats['coinwt']      = {rule: 'sum', attributes: ['platinumPieces', 'goldPieces', 'silverPieces', 'copperPieces'], modifier: 0.02};
    multistats['totalweight'] = {rule: 'sum', attributes: [...gearwt, 'coinwt']};

    // Carry Capacity Calculations
    multistats['weightLight'] = {rule: 'carry_capacity', attributes: ['str', 'strtemp', 'characterSize'], modifier: 0.333};
    multistats['weightMedium'] = {rule: 'carry_capacity', attributes: ['str', 'strtemp', 'characterSize'], modifier: 0.667};
    multistats['weightHeavy'] = {rule: 'carry_capacity', attributes: ['str', 'strtemp', 'characterSize'], modifier: 1};
    multistats['weightLift'] = {rule: 'carry_capacity', attributes: ['str', 'strtemp', 'characterSize'], modifier: 2};
    multistats['weightDrag'] = {rule: 'carry_capacity', attributes: ['str', 'strtemp', 'characterSize'], modifier: 5};

    // Size based fillers
    multistats['meleeSize']   = {rule: 'size_to_attack_ac', attributes: ['characterSize']};
    multistats['rangeSize']   = {rule: 'size_to_attack_ac', attributes: ['characterSize']};
    multistats['acSize']      = {rule: 'size_to_attack_ac', attributes: ['characterSize']};
    multistats['grappleSize'] = {rule: 'size_to_special_attack', attributes: ['characterSize']};

    // Armor & Save Summing
    multistats['acTotal'] = {rule: 'sum', attributes: ['acBase', 'acArmor', 'acShield', 'acDex', 'acSize', 'acNat', 'acDeflect', 'acDodge', 'acMisc']};
    ['Fort', 'Will', 'Ref'].forEach(x => {
      multistats[`save${x}total`] = {rule: 'sum', attributes: [`save${x}Base`, `save${x}Stat`, `save${x}Magic`, `save${x}Misc`]};
    });

    // Touch/FF AC filler
    multistats['touchAC'] = {rule: 'sum', attributes: ['acBase', 'acDex', 'acSize', 'acDeflect', 'acDodge', 'acMisc']};
    multistats['flatFootedAC'] = {rule: 'sum', attributes: ['acBase', 'acArmor', 'acShield', 'acSize', 'acDeflect', 'acNat', 'acMisc']};

    // Attack Bonus Summing
    ['grapple', 'melee', 'range'].forEach(x => {
      multistats[`${x}total`] = {rule: 'sum', attributes: [`${x}Base`, `${x}StatBonus`, `${x}Size`, `${x}Misc`]};
    });

    // Skill Summing (remember size bonus to hide)
    ['appraise','autohypnosis','balance','bluff','climb','concentration','craftfillin1','craftfillin2','craftfillin3','decipherscript','diplomacy','disabledevice','disguise','escapeartist','forgery','gatherinfo','handleanimal','heal','intimidate','jump','knowledgefillin1','knowledgefillin2','knowledgefillin3','knowledgefillin4','knowledgefillin5','knowledgefillin6','knowledgefillin7','listen','movesilently','openlock','performfillin1','performfillin2','performfillin3','professionfillin1','professionfillin2','psicraft','ride','search','sensemotive','sleightofhand','speaklanguage','spellcraft','spot','survival','swim','tumble','usemagicdevice','usepsionicdevice','userope','skillMisc0','skillMisc1','skillMisc2'].forEach(x => {
      multistats[`${x}Total`] = {rule: 'sum', attributes: [`${x}StatMod`, `${x}Ranks`, `${x}MiscMod`, ]};
    });

    multistats['hideTotal'] = {rule: 'special_hide_total', attributes: ['hideStatMod', 'hideRanks', 'hideMiscMod', 'characterSize']};

    const multifunctions = {
        pick_from_list: (x) => x[ x[0] ],
        fill: (x) => x,  // just return a value to fill another cell
        sum: (x, mult) => ((x.reduce((total, add) => total + add)) * (mult || 1)),  // add up any number of attributes, optional multiplier
        dnd_stat_bonus: (x) => Math.floor(x[0]/2 -5),
        dnd_tmpstat_bonus: (x) => Math.floor((x[0]+x[1])/2 -5),
        carry_capacity: function(x, mult) {
          const size_multiplier = {1: 0.125, 2: 0.25, 3: 0.5, 4: 0.75, 5: 1, 6: 2, 7: 4, 8: 8, 9: 16}
          const str_lookup = {0: 0, 1: 10, 2: 20, 3: 30, 4: 40, 5: 50, 6: 60, 7: 70, 8: 80, 9: 90, 10: 100, 11: 115, 12: 130, 13: 150, 14: 175, 15: 200, 16: 230, 17: 260, 18: 300, 19: 350, 20: 400, 21: 460, 22: 520, 23: 600, 24: 700, 25: 800, 26: 920, 27: 1040, 28: 1200, 29: 1400, 30: 1600, 31: 1840, 32: 2080, 33: 2400, 34: 2800, 35: 3200, 36: 3680, 37: 4160, 38: 4800, 39: 5600, 40: 6400, 41: 7360, 42: 8320, 43: 9600}
          let str = Math.min(43, Math.max(0, x[0] + x[1]))
          return (Math.round(size_multiplier[x[2]] * str_lookup[str] * mult * 10) / 10)
        },
        size_to_attack_ac: function(x) {
          const bonus = {1: 8, 2: 4, 3: 2, 4: 1, 5: 0, 6: -1, 7: -2, 8: -4, 9: -8}
          return (bonus[x[0]])
        },
        size_to_special_attack: function(x) {
          const bonus = {1: -16, 2: -12, 3: -8, 4: -4, 5: 0, 6: 4, 7: 8, 8: 12, 9: 16}
          return (bonus[x[0]])
        },
        size_to_hide_mod: function(x) {
          const bonus = {1: 16, 2: 12, 3: 8, 4: 4, 5: 0, 6: -4, 7: -8, 8: -12, 9: -16}
          return (bonus[x[0]])
        },
        special_hide_total: function(x) {
          const bonus = {1: 16, 2: 12, 3: 8, 4: 4, 5: 0, 6: -4, 7: -8, 8: -12, 9: -16}
          let normal_sum = multifunctions.sum(x.slice(0,3))
          return (normal_sum + bonus[x[3]])
        }
    };

    // ======================================================*/
    //           DO NOT EDIT BELOW THIS LINE                 //
    // ======================================================*/
    const mvlog = (title, text, color = 'green', style='font-size:12px; font-weight:normal;', headerstyle = 'font-size:13px; font-weight:bold;') => {
        let titleStyle = `color:${color}; ${headerstyle} text-decoration:underline;`;
        let textStyle = `color:${color}; ${style}`;
        const output = `%c${title}:%c ${text}`;
        console.log(output,titleStyle,textStyle);
    };
    // can use $ placeholder in attribute names. This converts '$_stat' to 'repeating_section_stat'
    const rep = '$'; //placeholder for repeating_section_
    const makeRepeatingName = (attribute, section) => attribute.startsWith(rep) ? attribute.replace(rep, `repeating_${section}_`) : attribute;
    const makeRepeatingAttributes = (attributes, section) => attributes.map(a => makeRepeatingName(a, section));
    const makeRepeatingID = (a, section, id) => a.replace(`repeating_${section}_`,`repeating_${section}_${id}_`);
    // given array of attributes, find if any have repeating_ and return the section name
    // section name will be 2nd element of name split on "_"
    const findSection = (arr) => {
        const s = arr.find(a => a.includes('repeating_'));
        const section = (s ? s.split('_')[1] : null);
        return section;
    };

    // check if attribute is one where a repeating section attribute depends on attributes both inside and outside the repeating section
    const isMixed = (attributes, destination) => {
        const some = someRepeating(attributes);
        const all = allRepeating(attributes);
        const repeatingdestination = destination.startsWith('repeating_');
        return (some && !all && repeatingdestination);
    };
    const allRepeating = attributes => attributes.every(r => r.startsWith('repeating_'));
    const someRepeating = attributes => attributes.some(r => r.startsWith('repeating_'));

    const defaultDataType = 'array'; // might change this to object
    const getData = (values, data = 'a', isnumbers = 0) => {
        // only a is functional right now, so this function is redundant.
        switch(data.charAt(0).toLowerCase()) {
            case 'o': return values;
            case 'a': return Object.values(values).map(i => 1 === isnumbers ? parseInt(i) ||0 : (0 === isnumbers ? +i || 0 : i));
            case 'v': return Object.values(values)[0];
        }
    };

    const processMax = (destination, result, max) => {
        const settings = {};
        if(max === 'current' || max === 'both') settings[destination] = result;
        if(max === 'max' || max === 'both') settings[`${destination}_max`] = result;
        return settings;
    };

    const isFunction = value => value && (Object.prototype.toString.call(value) === '[object Function]' || 'function' === typeof value || value instanceof Function);

    const processFunction = (destination, values, section) => {
        const rule = multistats[destination].rule;
        const func = isFunction(rule) ? rule:  multifunctions[rule]; // need to test if this works for arrow functions
